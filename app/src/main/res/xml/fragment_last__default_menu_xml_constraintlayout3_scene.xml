<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
      <OnSwipe motion:dragDirection="dragUp"
          motion:dragScale="1"
          motion:moveWhenScrollAtTop="true"
          motion:touchAnchorId="@+id/recyclerView"
          />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/shop_logo"
            motion:layout_constraintStart_toStartOf="@+id/menu_btn"
            android:id="@+id/scrollView2"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            motion:layout_constraintTop_toBottomOf="@+id/menu_btn"
            android:id="@+id/textView"
            motion:layout_constraintEnd_toStartOf="@+id/shop_logo"
            motion:layout_constraintStart_toStartOf="@+id/menu_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_editor_absoluteX="16dp"
            motion:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:layout_marginBottom="8dp" />

        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/choose_meal_txt"
            motion:layout_constraintTop_toTopOf="@id/shop_logo"
            motion:layout_constraintBottom_toBottomOf="@id/shop_logo"
            motion:layout_constraintStart_toStartOf="@+id/menu_btn"
            />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/shop_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" />
        <Constraint
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/menu_btn"
            motion:layout_constraintStart_toStartOf="@+id/menu_btn"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_meal_txt"
            motion:layout_constraintStart_toStartOf="@+id/menu_btn"
            motion:layout_constraintEnd_toStartOf="@id/shop_logo"
            motion:layout_constraintBaseline_toTopOf="@id/menu_btn"
            android:visibility="invisible"
            />
    </ConstraintSet>
</MotionScene>