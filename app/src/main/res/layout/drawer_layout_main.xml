<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logo_here"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_item"
            />
        <TextView
            android:id="@+id/my_account_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Account"
            style="@style/txt_styles"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_item"
            />
        <TextView
            android:id="@+id/settings_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            style="@style/txt_styles"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_item"
            />
        <TextView
            android:id="@+id/photo_Library_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photos Library"
            style="@style/txt_styles"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_item"
            />
        <TextView
            android:id="@+id/logout_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            style="@style/txt_styles"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>



</LinearLayout>